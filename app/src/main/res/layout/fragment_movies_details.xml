<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="@dimen/view_big_gap">

        <FrameLayout
            android:id="@+id/frameTitleImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/image_of_main_poster"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/img_avengers_background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient" />
        </FrameLayout>

        <Button
            android:id="@+id/toolbar"
            style="@style/ToolbarButtonTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/back_label"
            app:drawableLeftCompat="@drawable/ic_baseline_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAgeRating"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_gap"
            android:layout_marginBottom="@dimen/view_big_gap"
            android:text="@string/age_rating_default"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="13+" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/TextMainHeaderStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_gap"
            android:text="@string/movie_title"
            app:layout_constraintBottom_toBottomOf="@+id/frameTitleImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameTitleImage"
            tools:text="Avengers: \nEnd Game" />

        <!--text shadow-->
        <!--android:shadowColor="@color/accent"
        android:shadowDx="2"
        android:shadowDy="5"
        android:shadowRadius="5"-->

        <TextView
            android:id="@+id/tvGenres"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_gap"
            android:text="@string/movie_genres"
            android:textColor="@color/accent"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/layout_gap"
            android:layout_marginTop="8dp"
            android:numStars="5"
            android:rating="4"
            android:theme="@style/RatingBarStyle"
            android:isIndicator="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvGenres" />

        <TextView
            android:id="@+id/tvReviewsCount"
            style="@style/ReviewTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_medium_gap"
            android:layout_marginBottom="@dimen/view_medium_gap"
            android:paddingStart="12dp"
            android:text="@string/movie_reviews"
            app:layout_constraintStart_toEndOf="@+id/ratingBar"
            app:layout_constraintTop_toBottomOf="@+id/tvGenres"
            tools:ignore="RtlSymmetry"
            tools:text="125 Reviews" />

        <TextView
            android:id="@+id/tvStoryline"
            style="@style/TextHeaderStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_gap"
            android:layout_marginTop="@dimen/view_big_gap"
            android:text="@string/storyline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvReviewsCount" />

        <TextView
            android:id="@+id/tvStorylineText"
            style="@style/TextRegularStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_gap"
            android:layout_marginEnd="@dimen/layout_gap"
            android:lineSpacingExtra="4dp"
            android:paddingTop="@dimen/view_medium_gap"
            android:paddingBottom="@dimen/view_medium_gap"
            android:text="@string/movie_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvStoryline" />

        <TextView
            android:id="@+id/tvCast"
            style="@style/TextHeaderStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_gap"
            android:layout_marginTop="@dimen/view_big_gap"
            android:text="@string/cast"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvStorylineText" />

        <ImageView
            android:id="@+id/imgDowney"
            style="@style/ImageViewActorStyle"
            android:layout_marginStart="@dimen/layout_gap"
            android:contentDescription="@string/image_of_actor_or_actress"
            app:layout_constraintEnd_toStartOf="@+id/imgEvans"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCast"
            app:srcCompat="@drawable/img_downey" />

        <TextView
            android:id="@+id/tvDowney"
            style="@style/TextImageStyle"
            android:layout_width="@dimen/actor_icon_size"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_under_image_view_gap"
            android:gravity="start"
            android:maxLines="2"
            android:text="@string/robert_downey_jr"
            app:layout_constraintEnd_toEndOf="@+id/imgDowney"
            app:layout_constraintStart_toStartOf="@+id/imgDowney"
            app:layout_constraintTop_toBottomOf="@+id/imgDowney" />

        <ImageView
            android:id="@+id/imgEvans"
            style="@style/ImageViewActorStyle"
            android:contentDescription="@string/image_of_actor_or_actress"
            app:layout_constraintEnd_toStartOf="@+id/imgRuffalo"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imgDowney"
            app:layout_constraintTop_toBottomOf="@+id/tvCast"
            app:srcCompat="@drawable/img_evans" />

        <TextView
            android:id="@+id/tvEvans"
            style="@style/TextImageStyle"
            android:layout_width="@dimen/actor_icon_size"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_under_image_view_gap"
            android:gravity="start"
            android:maxLines="2"
            android:text="@string/chris_evans"
            app:layout_constraintEnd_toEndOf="@+id/imgEvans"
            app:layout_constraintStart_toStartOf="@+id/imgEvans"
            app:layout_constraintTop_toBottomOf="@+id/imgEvans" />

        <ImageView
            android:id="@+id/imgRuffalo"
            style="@style/ImageViewActorStyle"
            android:contentDescription="@string/image_of_actor_or_actress"
            app:layout_constraintEnd_toStartOf="@+id/imgHemsworth"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imgEvans"
            app:layout_constraintTop_toBottomOf="@+id/tvCast"
            app:srcCompat="@drawable/img_ruffalo" />

        <TextView
            android:id="@+id/tvRuffalo"
            style="@style/TextImageStyle"
            android:layout_width="@dimen/actor_icon_size"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_under_image_view_gap"
            android:gravity="start"
            android:maxLines="2"
            android:text="@string/mark_ruffalo"
            app:layout_constraintEnd_toEndOf="@+id/imgRuffalo"
            app:layout_constraintStart_toStartOf="@+id/imgRuffalo"
            app:layout_constraintTop_toBottomOf="@+id/imgRuffalo" />

        <ImageView
            android:id="@+id/imgHemsworth"
            style="@style/ImageViewActorStyle"
            android:layout_marginEnd="@dimen/layout_gap"
            android:contentDescription="@string/image_of_actor_or_actress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imgRuffalo"
            app:layout_constraintTop_toBottomOf="@+id/tvCast"
            app:srcCompat="@drawable/img_hemsworth" />

        <TextView
            android:id="@+id/tvHemsworth"
            style="@style/TextImageStyle"
            android:layout_width="@dimen/actor_icon_size"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_under_image_view_gap"
            android:gravity="start"
            android:maxLines="2"
            android:text="@string/chris_hemsworth"
            app:layout_constraintEnd_toEndOf="@+id/imgHemsworth"
            app:layout_constraintStart_toStartOf="@+id/imgHemsworth"
            app:layout_constraintTop_toBottomOf="@+id/imgHemsworth" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>